@font-face
  font-family NeutraText
  font-weight bold
  src url("../fonts/neutra_text_bold.otf") format("opentype")

.sponsor
  align-items center
  align-content center
  display flex
  flex-direction row
  justify-content flex-start
  padding 1.5rem
  border solid 2px black
  border-radius: 1rem

  .logo
    margin-right 2rem
    border: none

    img
      max-width: 200px;
      height: auto;

.post-author
  align-items center
  align-content flex-end
  display flex
  flex-direction row
  justify-content flex-end
  margin-top 5.5rem

  .bio
      width 38rem
      text-align right
      color #9e9e9e
      font-size 1.5rem

  .photo
      all initial
      border-radius 50%
      margin-left: 2rem
      height 8rem

