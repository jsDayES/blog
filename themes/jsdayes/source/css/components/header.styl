$siteAColor = #000000
$siteABgColor = #f7df1e
$siteDescColor = #9e9e9e
$whiteColor = #ffffff

header

  .site-branding
    text-align center
    font-family "Cabin", arial, sans-serif
    line-height 4rem

    .site-title
      margin 0
      font-size 5rem

      a
        color $siteAColor

        .js
          background-color $siteABgColor
          color $whiteColor
          font-family "Neutral Bold", arial, sans-serif
          font-weight bolder
          line-height 4rem
          padding 3.5rem .7rem 0 4rem

    .site-description
      color $siteDescColor
      font-size 2.5rem
      margin 1rem 0 0

  .site-navigation
    text-align center
    margin-top 5rem
    ul
      list-style none
      padding 0
      margin 0
      font-size 1.6em

      li
        display inline-block
        margin 0 0.5rem

        a
          display block
          color $siteABgColor
          font-size 1.6rem
          line-height 2rem
          padding 0 1rem
